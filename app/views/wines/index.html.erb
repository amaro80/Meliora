<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type wine</th>
      <th>Image url</th>
      <th>String</th>
      <th>Country</th>
      <th>String</th>
      <th>Wine year</th>
      <th>Upc</th>
      <th>Rating</th>
      <th>Vineyard</th>
      <th>User</th>
      <th>User</th>
      <th>Vineyard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.type_wine %></td>
        <td><%= image_tag wine.image_url %></td>
        <td><%#<%= wine.string %></td>
        <td><%= wine.country %></td>
        <td><%#<%= wine.string %></td>
        <td><%= wine.wine_year %></td>
        <td><%= wine.upc %></td>
        <td><%= wine.rating %></td>
        <td><%= wine.vineyard_id %></td>
        <td><%= link_to 'Show', wine_path (@user, wine)%></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        
         <% if current_user.admin? %>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

